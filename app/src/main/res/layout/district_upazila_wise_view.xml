<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="1,2,3,4,5,6">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/tabile_border">

        <TextView
            android:id="@+id/merchantId"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="124"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/black"
            android:padding="8dp"
            android:gravity="center"
            android:layout_column="1" />

        <TextView
            android:id="@+id/merchantName"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Sadakatul shakil"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/black"
            android:padding="8dp"
            android:gravity="center"
            android:layout_column="1" />

        <TextView
            android:id="@+id/phoneNo"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="01751330394"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/black"
            android:padding="8dp"
            android:gravity="center"
            android:layout_column="1" />

        <TextView
            android:id="@+id/districtName"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Rangpur"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/black"
            android:padding="8dp"
            android:gravity="center"
            android:layout_column="1" />

        <TextView
            android:id="@+id/upazilaName"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Pirgachha"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/black"
            android:padding="8dp"
            android:gravity="center"
            android:layout_column="1" />

        <TextView
            android:id="@+id/productCount"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="72"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/black"
            android:padding="8dp"
            android:gravity="center"
            android:layout_column="1" />

    </TableRow>

</TableLayout>
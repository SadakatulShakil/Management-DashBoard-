<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="1,2,3,4,5,6,7">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/tabile_border">

        <TextView
            android:id="@+id/userId"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="124"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/black"
            android:padding="8dp"
            android:gravity="center"
            android:layout_column="1" />

        <TextView
            android:id="@+id/productName"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="easy full shirt"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/black"
            android:padding="8dp"
            android:gravity="center"
            android:layout_column="1" />

        <TextView
            android:id="@+id/categoryName"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="মেয়েদের ফ্যাশন"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/black"
            android:padding="8dp"
            android:gravity="center"
            android:layout_column="1" />

        <TextView
            android:id="@+id/merchantName"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Shakil khan"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/black"
            android:padding="8dp"
            android:gravity="center"
            android:layout_column="1" />

        <TextView
            android:id="@+id/phoneNo"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="01775559411"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/black"
            android:padding="8dp"
            android:gravity="center"
            android:layout_column="1" />

        <TextView
            android:id="@+id/districtName"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="কক্সবাজার"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/black"
            android:padding="8dp"
            android:gravity="center"
            android:layout_column="1" />

        <TextView
            android:id="@+id/upazilaName"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="পীরগাছা"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/black"
            android:padding="8dp"
            android:gravity="center"
            android:layout_column="1" />

    </TableRow>

</TableLayout>